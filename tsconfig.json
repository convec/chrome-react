{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"noEmit": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "build"]
}
